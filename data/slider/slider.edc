        ACTIVATE_RESOURCE("activateBluetoothResource","bluetoothResource");
        ACTIVATE_RESOURCE("activateWifiResource","wifiResource");
        ACTIVATE_RESOURCE("activateGpsResource","gpsResource");
        ACTIVATE_RESOURCE("activateAlarm","alarm");

        DEACTIVATE_RESOURCE("deactivateCpuResource","cpuResource");
        DEACTIVATE_RESOURCE("deactivateDisplayResource","displayResource");
        DEACTIVATE_RESOURCE("deactivateBluetoothResource","bluetoothResource");
        DEACTIVATE_RESOURCE("deactivateWifiResource","wifiResource");
