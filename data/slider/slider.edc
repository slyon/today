#define RESOURCE(__name, __image, __relTo, __offset)                           \
part {                                                                         \
    name, __name;                                                              \
    type, IMAGE;                                                               \
    mouse_events: 0;                                                           \
    description {                                                              \
        state: "default" 0.0;                                                  \
        image { normal: __image; }                                             \
        rel1 { to: __relTo; relative: 0.0 0.0; }                               \
        rel2 { to: __relTo; relative: 0.0 0.0; }                               \
        }                                                                      \
    description {                                                              \
        state: "active" 0.0;                                                   \
        inherit: "default" 0.0;                                                \
        rel1 { offset: __offset 0; }                                           \
        rel2 { offset: -5 20; }                                                \
        }                                                                      \
    }

#define ACTIVATE_RESOURCE(__src, __target)                                     \
program {                                                                      \
    name, __src;                                                               \
    signal: "*";                                                               \
    source: __src;                                                             \
    action: STATE_SET "active" 0.0;                                            \
    target: __target;                                                          \
    }

#define DEACTIVATE_RESOURCE(__src, __target)                                   \
program {                                                                      \
    name, __src;                                                               \
    signal: "*";                                                               \
    source: __src;                                                             \
    action: STATE_SET "default" 0.0;                                           \
    target: __target;                                                          \
    }

